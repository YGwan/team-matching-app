<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamMatchingApp" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->

                        <!--           바뀐 부분            -->

        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>

                        <!--          그대로인 부분               !-->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


                                <!--    로그인 레이아웃 설정 부분     !-->

    <style name ="LoginLayout" parent="android:Widget.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name ="android:background">@android:color/transparent</item>
        <item name="android:textSize">20sp</item>

    </style>

                                <!--버튼 스타일-->

    <style name="yellowbutton" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_radius_yellow</item>

    </style>

    <style name="whitebutton" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_radius</item>

    </style>

                    <!--bottom_navigation_item 레이아웃-->

    <style name="bottom_navigation_item" parent="android:Widget.TextView">
        <item name="android:paddingTop">1.6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name ="home_url_layout" parent ="android:Widget.TextView">
        <item name = "android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>